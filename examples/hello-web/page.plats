# PlatsWeb SFC example (MVP)

pagina {
  blok id:"app" class:"container" {
    kop tekst:"VlaamsCodex PlatsWeb"
    tekst tekst:"Typ iets en ge ziet het direct hieronder:"

    rij class:"row" {
      invoer id:"naam" placeholder:"Uw tekst"
      knop id:"clear" tekst:"Wis"
    }

    tekst tekst:"Ge typte: {{ naam }}"
  }
}

script {
  staat naam = ""

  functie onInput() {
    staat naam = lees("#naam")
  }

  functie clear() {
    zet("#naam", "")
    staat naam = ""
  }

  bij input "#naam" -> onInput()
  bij klik "#clear" -> clear()
}

stijl {
  body { font-family: system-ui, sans-serif; padding: 2rem; }
  .container { max-width: 720px; margin: 0 auto; }
  .row { display: flex; gap: 0.75rem; align-items: center; }
  input { flex: 1; padding: 0.6rem 0.75rem; border: 1px solid #ddd; border-radius: 8px; }
  button { padding: 0.6rem 0.9rem; border: 1px solid #111; background: #111; color: #fff; border-radius: 8px; cursor: pointer; }
  button:hover { opacity: 0.9; }
}

